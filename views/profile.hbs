<div class="container">
<div class="bodyClass">
        <div class="row">
          {{> messages}}
              <div class="col-sm-6 col-md-2">
               <img src="{{ imagePath }}" alt="Girl" class="img-rounded img-responsive profilepic" />
              </div>
              <div class="col-sm-6 col-md-4">
                  <br>
                    <h4>{{ name }}</h4>
                    <i class="fas fa-user"></i> {{ username }}
                    <br>
                    <i class="fas fa-at"></i> {{ email }}
                    <br><br>
                  <button type="submit" class="btn loginNav" onclick="showEdit()" >Edit Username</button>
                </div>
                <div class="customCol" id= "EditProfile">
                        <div class="form-row">
                            <label for="username">Username</label>
                            <div class="input-group form-group">
                            <input type="text" class="form-control" id="username" name="username" placeholder="Username" aria-describedby="inputGroupPrepend">
                            </div>
                        </div>
                        <div style="float: right;">
                        <input type="button" class="btn btn-light cancel_btn" value="Cancel" onclick="showEdit()">
                        <button type="submit" class="btn loginNav" aria-disabled="true" id=editUser >Save</button>
                      </div>
                </div>
        </div>
    <br>
    <br>
    {{#if isGuest}}
        <h1>STATUS</h1>
        <br>
        {{#if reservation}}
            <table class="table table-sm table-striped table-bordered">
                <thead>
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">Village</th>
                    <th scope="col">Villa</th>
                    <th scope="col">Check-in</th>
                    <th scope="col">Check-out</th>
                    <th scope="col">Adult/s</th>
                    <th scope="col">Child/ren</th>
                    <th scope="col">Total</th>
                    <th scope="col">Status</th>
                    <th scope="col">Manage</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each reservation}}
                        <tr>
                        <th scope="row">{{inc @index}}</th>
                        <td>{{cap this.villa.villageTheme}}</td>
                        <td>{{cap this.villa.villatype}}</td>
                        <td>{{this.checkIn}}</td>
                        <td>{{this.checkOut}}</td>
                        <td>{{this.adultNum}}</td>
                        <td>{{this.childrenNum}}</td>
                        <td>Php {{comma this.total}}</td>
                        <td>{{cap this.status}}</td>
                        {{#isEqual this.status "Active"}}
                            <td><button class="btn-sm manageBtn" aria-disabled="true" data-toggle="modal" data-target="#cancelModal">Cancel</button></td>
                        {{/isEqual}}
                        {{#isEqual this.status "Completed"}}
                            <td></td>
                        {{/isEqual}}

                        <!-- Cancel Confirmation-->
                        <div id="cancelModal" class="modal fade">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <form action="/cancel" method="POST">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Cancel Reservation</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        </div>
                                        <div class="modal-body">
                                            <p class="cancel_p">Are you sure you want to cancel the Reservation?</p>
                                        </div>
                                        <div class="modal-footer">
                                            <input type="button" class="btn btn-light cancel_btn" data-dismiss="modal" value="No">
                                            <input id="reservationId" name="reservationId" value="{{this._id}}" type="hidden">
                                            <button type="submit" class="btn login_btn" aria-disabled="true">Yes</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        </tr>
                    {{/each}}
                </tbody>
            </table>
                {{else}}
                    <p style="text-align: center;">No reservations yet.</p>
        {{/if}}
    {{/if}}
    <br>
    <br>
</div>
</div>

<script>
        EditProfile.style.display = 'none';


        function showEdit()
        {
            var x=document.getElementById("EditProfile");

            if(x.style.display=== "none")
            {
              x.style.display ="block";
            }
            else
            {
              x.style.display ="none";
            }
        }
</script>
