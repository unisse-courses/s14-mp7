<div class="container">
<div class="bodyClass">
    <div class="row">
          <div class="col-sm-6 col-md-2">
           <img src="{{ imagePath }}" alt="Girl" class="img-rounded img-responsive profilepic" />
          </div>
          <div class="col-sm-6 col-md-4">
              <br>
                <h4>{{ name }}</h4>
                <i class="fas fa-user"></i> {{ username }}
                <br>
                <i class="fas fa-at"></i> {{ email }}
                <br><br>
                <a href="/logout" class="btn loginNav" role="button" aria-disabled="true">Logout</a>
        </div>
    </div>  
    <br>
    <br>
    {{#if isGuest}}
        <h1>STATUS</h1>
        <br>
        {{#if reservation}}
            <table class="table table-sm table-striped table-bordered">
                <thead>
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">Village</th>
                    <th scope="col">Villa</th>
                    <th scope="col">Check-in</th>
                    <th scope="col">Check-out</th>
                    <th scope="col">Adult/s</th>
                    <th scope="col">Child/ren</th>
                    <th scope="col">Total</th>
                    <th scope="col">Status</th>
                    <th scope="col">Manage</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each reservation}}
                        <tr>
                        <th scope="row">{{inc @index}}</th>
                        <td>{{cap this.villa.villageTheme}}</td>
                        <td>{{cap this.villa.villatype}}</td>
                        <td>{{this.checkIn}}</td>
                        <td>{{this.checkOut}}</td>
                        <td>{{this.adultNum}}</td>
                        <td>{{this.childrenNum}}</td>
                        <td>Php {{comma this.total}}</td>
                        <td>{{cap this.status}}</td>
                        
                        {{#isEqual this.status "Active"}}
                            <td><button class="btn-sm manageBtn" aria-disabled="true" data-toggle="modal" data-target="#cancelModal">Cancel</button></td>
                        <!-- Cancel Confirmation-->
                        <div id="cancelModal" class="modal fade">
                            
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <form action="/cancel" method="POST">
                                        <div class="modal-header">						
                                            <h5 class="modal-title">Cancel Reservation</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        </div>
                                        <div class="modal-body">					
                                            <p class="cancel_p">Are you sure you want to cancel the Reservation?</p>
                                        </div>
                                        <div class="modal-footer">
                                            <input type="button" class="btn btn-light cancel_btn" data-dismiss="modal" value="No">
                                             {{log this._id}}
                                            <input id="reservationId" name="reservationId" value="{{this._id}}" type="hidden">
                                            <button type="submit" class="btn login_btn" aria-disabled="true">Yes</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        {{/isEqual}}
                        {{#isEqual this.status "Completed"}}
                            <td></td>
                        {{/isEqual}}
                        


                        </tr> 
                    {{/each}}       
                </tbody>
            </table>
                {{else}}
                    <p style="text-align: center;">No reservations yet.</p>   
        {{/if}}  
    {{/if}}
    <br>
    <br>
</div>
</div>
